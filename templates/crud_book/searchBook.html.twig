<html>
<head></head>
<body>

<h1>Recherche de livre</h1>

<form action="{{ path('app_crud_book_search') }}" method="get">
    <input type="text" name="title" placeholder="Entrer le titre" value="{{ title }}">
    <button type="submit">Rechercher</button>
</form>

{% if book %}
    <h2>Details de livre:</h2>
    <table>
        <tr>
            <th>Id</th>
            <td>{{ book.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ book.title }}</td>
        </tr>
        <tr>
            <th>Date of Publication</th>
            <td>{{ book.datePublication|date('Y-m-d') }}</td>
        </tr>
    </table>
{% elseif title %}
    <p>Pas de livre avec ce titre "{{ title }}".</p>
{% endif %}

</body>
</html>
