<html>
<head></head>
<body>
{% if authors is defined and authors is not empty %}
    {% set total_books=0 %}
    <table>
        <tr>
            <th>id</th>
            <th>authorName</th>
            <th>nbrBooks</th>
            <th>picture</th>
        </tr>
        <tr {% for author in authors %}>
            {% set total_books=total_books+ author.nbrBooks %}
            <td>{{ author.id }}</td>
            <td>{{ author.authorName|upper }}</td>
            <td>{{ author.nbrBooks }}</td>
            <td><img src="{{ asset(author.picture) }}"></td>
            <td><a href="{{ path("app_author",{'id':author.id}) }}">showAuthor</a></td>
        </tr {% endfor %}>
    </table>
    <h1>this table contains {{ authors|length }}
        authors and {{ total_books }} books</h1>

{% else %}
    <h1>The table is not defined or empty</h1>
{% endif %}
</body>
</html>
